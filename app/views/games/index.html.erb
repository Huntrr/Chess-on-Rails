<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>White player</th>
      <th>Black player</th>
      <th>Game state</th>
      <th>Allow undos</th>
      <th>Sandbox mode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.white_player.name, game.white_player %></td>
        <td><%= link_to game.black_player.name, game.black_player %></td>
        <td><%= game.game_state %></td>
        <td><%= game.allow_undos %></td>
        <td><%= game.sandbox_mode %></td>
        <td><%= link_to 'Show', game %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
