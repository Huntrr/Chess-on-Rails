<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>White player</th>
      <th>Black player</th>
      <th>Game state</th>
      <th>Allow undos</th>
      <th>Sandbox mode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.white_player %></td>
        <td><%= game.black_player %></td>
        <td><%= game.game_state %></td>
        <td><%= game.allow_undos %></td>
        <td><%= game.sandbox_mode %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

